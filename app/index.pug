extends include/templates/layout

block vars
  - var header_transparent = true;
  - var page_loader        = true;

append css

append content

  // Hero
  section.module-cover.bg-dark.parallax(data-background="" data-overlay="1" data-gradient="1")
    .container

      .row
        .col-md-12.text-center
          h1.mb-4 Start your own <br> business with Bright
          p.lead.mb-5 See how your users experience your website in realtime or view  <br> trends to see any changes in performance over time.
          p.btn-list
            a(href="#" class="btn btn-lg btn-brand") Get Started
            a(href="#" class="btn btn-lg btn-outline-new-white") Learn More
  // Hero end

  = "\n"

  // Video
  section.module.bg-gray.pt-0
    .container

      .row
        .col-md-10.m-auto
          .space(data-mt="-100px")
          .popup-video.mb-5
            img(src="assets/images/main/7.jpg" alt="")
            a(href="https://www.youtube.com/watch?v=0aCbYxJ9gus" class="popup-video-play")

      .row
        .col-md-10.m-auto
          .owl-carousel.clients-carousel(data-carousel-options='{"dots": false}')
            .client
              img(src="assets/images/clients/1.png" alt="")
            .client
              img(src="assets/images/clients/2.png" alt="")
            .client
              img(src="assets/images/clients/3.png" alt="")
            .client
              img(src="assets/images/clients/4.png" alt="")
            .client
              img(src="assets/images/clients/5.png" alt="")
            .client
              img(src="assets/images/clients/6.png" alt="")
            .client
              img(src="assets/images/clients/7.png" alt="")
  // Video end

  = "\n"

  // Portfolio Carousel
  section.module
    .container

      .row
        .col-md-10.col-lg-6.m-auto.text-center
          h2 Premium Collection.
          p.lead See how your users experience your website in realtime or view trends to see any changes in performance over time.

      .row
        .col-md-12
          .space(data-mt="60px")

    .container-fluid.p-0

      .row.no-gutters
        .col-md-12
          .owl-carousel.portfolio-carousel(data-carousel-options='{"nav": true}')
            +PortfolioItem("assets/images/portfolio/1.jpg", "Modulamp", "branding bg-dark", "Digital")
            +PortfolioItem("assets/images/portfolio/2.jpg", "Monochrome", "digital bg-dark", "Branding, Photo")
            +PortfolioItem("assets/images/portfolio/3.jpg", "Ellie Cashman", "packaging bg-dark", "Packaging")
            +PortfolioItem("assets/images/portfolio/4.jpg", "Solave Cleanser", "branding bg-dark", "Digital")
            +PortfolioItem("assets/images/portfolio/5.jpg", "Monochrome", "digital bg-dark", "Branding")
  // Portfolio Carousel end

  = "\n"

  // Services
  section.module.pt-0
    .container

      .row
        .col-lg-4.col-md-6
          +IconBox("far fa-file-alt", "Great Documentation", "See how your users experience your website in realtime or view trends to see any changes.", "", true)
        .col-lg-4.col-md-6
          +IconBox("fab fa-chrome", "Live Examples", "See how your users experience your website in realtime or view trends to see any changes.", "", true)
        .col-lg-4.col-md-6
          +IconBox("fab fa-angrycreative", "Creative Layout", "See how your users experience your website in realtime or view trends to see any changes.", "", true)
        .col-lg-4.col-md-6
          +IconBox("far fa-object-ungroup", "Responsive Desing", "See how your users experience your website in realtime or view trends to see any changes.", "", true)
        .col-lg-4.col-md-6
          +IconBox("fas fa-spinner", "Pug Template Engine", "See how your users experience your website in realtime or view trends to see any changes.", "", true)
        .col-lg-4.col-md-6
          +IconBox("fab fa-sass", "Gulp & SASS", "See how your users experience your website in realtime or view trends to see any changes.", "", true)
  // Services end

  = "\n"

  // Side Image
  section.module.bg-gray
    .container-fluid.p-lg-0

      .row.align-items-center.no-gutters
        .col-lg-3.offset-lg-2
          .mb-4
            h2 Customers love Bright <br> fresh and modern design.
            p.lead See how your users experience your website in realtime or view trends to see changes.
          ul.arrow-list.mb-md-5.mb-sm-5
            li Web Design
            li Web Applications
            li Digital Strategy
            li Information Architecture
            li Copywriting

        .col-lg-6.offset-lg-1
          p: img(class="img-shadow" src="assets/images/main/1.jpg" alt="")
  // Side Images end

  = "\n"

  // Alt Services
  section.module
    .container

      .row
        .col-md-10.col-lg-6.m-auto.text-center
          h2 Easy and Simple Theme.
          p.lead See how your users experience your website in realtime or view trends to see any changes in performance over time.

      .row
        .col-md-12
          .space(data-mt="60px")

      .row.align-items-center
        .col-lg-4.order-lg-2
          .wave-pulse.wave-pulse-1
          .wave-pulse.wave-pulse-2
          .wave-pulse.wave-pulse-3
          p.text-center: img(class="relative z-index-10" src="assets/images/main/iphone.png" alt="")
        .col-lg-3.offset-lg-1.order-lg-1
          +IconBox("fab fa-chrome", "Live Examples", "See how your users experience your website in realtime or view trends to see any changes.", "text-lg-right")
          +IconBox("far fa-object-ungroup", "Responsive Desing", "See how your users experience your website in realtime or view trends to see any changes.", "text-lg-right")
        .col-lg-3.order-lg-3
          +IconBox("fas fa-spinner", "Pug Template Engine", "See how your users experience your website in realtime or view trends to see any changes.", "")
          +IconBox("fab fa-sass", "Gulp & SASS", "See how your users experience your website in realtime or view trends to see any changes.", "")

      .row
        .col-md-12
          .space(data-mb="60px")

      .row
        .col-md-12
          .text-center
            p.lead Like what you see? #[a(href="#") See more features &rarr;]
  // Alt Services end

  = "\n"

  // Testimonials
  section.module.bg-dark.parallax(data-background="" data-overlay="1" data-gradient="1")
    .container

      .row
        .col-md-12
          .space(data-mt="60px")

      .row
        .col-md-10.m-auto
          .review-slides.owl-carousel
            +TestimonialsSlider("Albert Einstein", "I don't work from drawings. I don't make sketches and drawings <br/> and color sketches into a final painting.")
            +TestimonialsSlider("Ralph Waldo Emerson", "To be yourself in a world that is constantly trying to make you <br/> something else is the greatest accomplishment.")
            +TestimonialsSlider("Marilyn Monroe", "Imperfection is beauty, madness is genius and it's better to be <br/> absolutely ridiculous than absolutely boring.")

      .row
        .col-md-12
          .space(data-mb="100px")

      .row
        .col-md-3
          .text-center
            +Counter("Happy Clients", "2538")
        .col-md-3
          .text-center
            +Counter("Total downloads", "3124")
        .col-md-3
          .text-center
            +Counter("Awards Won", "4128")
        .col-md-3
          .text-center
            +Counter("Theme Users", "5534")

      .row
        .col-md-12
          .space(data-mb="60px")
  // Testimonials end

  = "\n"

  // Team
  section.module.divider-bottom
    .container

      .row
        .col-md-10.col-lg-6.m-auto.text-center
          h2 Masters of their Craft.
          p.lead See how your users experience your website in realtime or view trends to see any changes in performance over time.

      .row
        .col-md-12
          .space(data-mt="60px")

      .row
        .col-md-6
          +team("assets/images/team/2.jpg", "Emma Connor", "Designer")
        .col-md-6
          +team("assets/images/team/3.jpg", "Richard Bauer", "Developer")

      .row
        .col-md-4
          +team("assets/images/team/1.jpg", "Emma Connor", "Designer")
        .col-md-4
          +team("assets/images/team/4.jpg", "Richard Bauer", "Developer")
        .col-md-4
          +team("assets/images/team/5.jpg", "Richard Bauer", "Developer")
  // Team end

  = "\n"

  // Posts
  section.module
    .container

      .row
        .col-md-10.col-lg-6.m-auto.text-center
          h2 Latest articles.
          p.lead See how your users experience your website in realtime or view trends to see any changes in performance over time.

      .row
        .col-md-12
          .space(data-mb="60px")

      .card-deck
        .card.card-xl.js-tilt.bg-brand(data-background="assets/images/blog/5.jpg")
          .card-body.mb-10
            h4: a(href="#") Introducing Bright Responsive with Bootstrap 4
          .card-footer
            a(href="#") Read More &rarr;
        .card.card-xl.js-tilt.bg-danger(data-background="assets/images/blog/3.jpg")
          .card-body.mb-10
            h4: a(href="#") Introducing Bright Responsive with Bootstrap 4
          .card-footer
            a(href="#") Read More &rarr;
        .card.card-xl.js-tilt.bg-info(data-background="assets/images/blog/7.jpg")
          .card-body.mb-10
            h4: a(href="#") Introducing Bright Responsive with Bootstrap 4
          .card-footer
            a(href="#") Read More &rarr;

      .row
        .col-md-12
          .space(data-mb="40px")

      .row
        .col-md-12
          .text-center
            p.lead Like what you see? #[a(href="#") See more posts &rarr;]
  // Posts end

  = "\n"

  // Callout
  section.module.bg-dark.parallax.pb-0(data-background="" data-overlay="1" data-gradient="1")
    .container

      .row
        .col-md-10.col-lg-6.m-auto.text-center
          h2 Ready to Start your Project?
          p.lead See how your users experience your website in realtime or view trends to see any changes in performance over time.

      .row
        .col-md-12
          .space(data-mb="40px")

      .row
        .col-md-12
          p.text-center
            a(href="#" class="btn btn-lg btn-circle btn-danger") Purchase Template

      .row
        .col-md-12
          .space(data-mb="60px")

      .row
        .col-md-11.m-auto
          p: img(src="assets/images/main/iphone-4.png" alt="")
          .space(data-mb="-120px")
  // Callout end